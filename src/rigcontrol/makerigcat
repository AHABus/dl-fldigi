STATIC_LDFLAGS = $(shell fltk-config --ldstaticflags --use-images)
CXXFLAGS = $(shell fltk-config --cxxflags) \
	-I../include \
	-Wno-uninitialized -Wno-deprecated \
    -O2 -ffast-math -fno-rtti -fexceptions -finline-functions

all: rigCAT

rigCAT:
	g++ $(CXXFLAGS) -DUSE_HAMLIB=0 -DRIGCATTEST \
	rigxml.cxx rigio.cxx rigclass.cxx rigdialog.cxx rigsupport.cxx \
	serial.cxx FreqControl.cxx \
	rigCAT.cxx \
	$(STATIC_LDFLAGS) -o rigCAT
